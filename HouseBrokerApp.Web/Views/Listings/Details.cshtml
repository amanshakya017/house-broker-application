@model HouseBrokerApp.Application.DTOs.PropertyListingDto
<h2>Listing Details</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.PropertyType.ToString() - @Model.Location</h5>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Features:</strong> @Model.Features</p>
        <p><strong>Description:</strong> @Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid mb-2" />
        }

        @if (User.IsInRole("Broker"))
        {
            <p class="text-success"><strong>Commission:</strong> @Model.Commission?.ToString("C")</p>
        }
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-2">Back to Listings</a>
