@model HouseBrokerApp.Application.DTOs.PropertyListingDto
@{
    ViewData["Title"] = "Delete Listing";
}
<h2>Delete Listing</h2>
<p>Are you sure you want to delete this?</p>
<dl class="row">
    <dt class="col-sm-2">Property Type</dt>
    <dd class="col-sm-10">@Model.PropertyType</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>
    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
