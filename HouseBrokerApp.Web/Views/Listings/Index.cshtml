@model HouseBrokerApp.Application.DTOs.ListingSearchModel

<h2>Property Listings</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Listing</a>
</p>
<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-3">
            <input asp-for="Location" class="form-control" placeholder="Location" />
        </div>
        <div class="col-md-3">
            <input asp-for="MinPrice" class="form-control" placeholder="Min Price" />
        </div>
        <div class="col-md-3">
            <input asp-for="MaxPrice" class="form-control" placeholder="Max Price" />
        </div>
        <div class="col-md-3">
            <select asp-for="PropertyType"
                    asp-items="Html.GetEnumSelectList<HouseBrokerApp.Core.Enums.PropertyType>()"
                    class="form-control">
                <option value="">-- All --</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Property Type</th>
            <th>Location</th>
            <th>Price</th>
            <th>Features</th>
            <th>Description</th>
            <th>Image</th>
            @if (User.IsInRole("Broker"))
            {
                <th>Commission</th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Listings)
        {
            <tr>
                <td>@item.PropertyType.ToString()</td>
                <td>@item.Location</td>
                <td>@item.Price</td>
                <td>@item.Features</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="image" style="max-width:100px" />
                    }
                </td>
                @if (User.IsInRole("Broker"))
                {
                    <td>@item.Commission</td>
                }
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">🔍 Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
